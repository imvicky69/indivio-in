rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Allow anyone to read and write to the contacts collection
    // This is safe for contact forms as it's public data
    match /contacts/{document} {
      allow read, write: if true;
    }

    // Allow anyone to read and write to the bookings collection
    // In production, you might want to restrict this
    match /bookings/{document} {
      allow read, write: if true;
    }
    
    // Allow public read access to plans, offers, and siteContent collections
    // These are public-facing data that anyone can view
    match /plans/{document} {
      allow read: if true;
      allow write: if false; // Only admins can write (using admin SDK)
    }
    
    match /offers/{document} {
      allow read: if true;
      allow write: if false; // Only admins can write (using admin SDK)
    }
    
    match /siteContent/{document} {
      allow read: if true;
      allow write: if false; // Only admins can write (using admin SDK)
    }
    
    // Allow writing to users collection during registration and authentication processes
    match /users/{userId} {
      // Users can read and write their own data
      allow read, write: if request.auth != null && request.auth.uid == userId;
      // Allow creation of new user documents during registration (no authentication yet)
      allow create: if true;
    }
    
    // Allow writing to payments collection for checkout process
    match /payments/{document} {
      // Allow creating and updating payment records during checkout process
      allow create, update: if true;
      // Allow users to read their own payment records
      allow read: if request.auth != null && resource.data.userId == request.auth.uid;
    }
    
    // Allow writing to newsletter_subscriptions collection
    match /newsletter_subscriptions/{document} {
      allow create: if true;
    }

    // Deny all other access by default
    match /{document=**} {
      allow read, write: if false;
    }
  }
}// Updated rules Thu, Oct 16, 2025  6:59:08 PM
